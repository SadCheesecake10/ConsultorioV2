        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="54,145,50,71"/>
        <TextBox HorizontalAlignment="Left" Margin="76,103,0,0" TextWrapping="Wrap" Text="Buscar..." VerticalAlignment="Top" Width="653" Height="33" FontFamily="Yu Gothic UI" FontSize="20" SelectionOpacity="0.5"/>
    </Grid>
</Page>
