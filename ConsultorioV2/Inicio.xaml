      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConsultorioV2"
      mc:Ignorable="d" 
      d:DesignHeight="481" d:DesignWidth="793"
      Title="Inicio" Loaded="Page_Loaded">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="BIENVENIDO" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" FontSize="72" TextAlignment="Center" Width="793"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" Text="Citas de hoy:" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Width="792" FontSize="48"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,165,10,94"/>
        <TextBox x:Name="Reloj" HorizontalAlignment="Left" Margin="21,442,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Width="762" FontFamily="Segoe UI Variable Display" FontSize="20" BorderBrush="{x:Null}" Background="{x:Null}" TextAlignment="Right" SelectionBrush="{x:Null}" Cursor="AppStarting"/>
    </Grid>
</Page>
